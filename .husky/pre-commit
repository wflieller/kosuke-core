# Check if we have Python files in the commit
python_files=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(py)$' | grep '^agent/' || true)

# Run Python checks if there are Python files in agent/
if [ -n "$python_files" ]; then
  echo "ğŸ Running Python code quality checks for agent/..."
  
  # Check if we're in a Python virtual environment for agent
  if [ -f "./venv/bin/activate" ]; then
    source ./venv/bin/activate
    cd agent
  
    echo "  â†’ Running ruff linting..."
    ruff check . --fix
    if [ $? -ne 0 ]; then
      echo "âŒ Python linting failed. Please fix the errors before committing."
      exit 1
    fi
    
    echo "  â†’ Running ruff formatting..."
    ruff format .
        
    cd ..
    deactivate
    echo "âœ… Python checks passed!"
  else
    echo "âš ï¸  Python virtual environment not found at agent/.venv"
    echo "   Run: cd agent && python -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt"
    exit 1
  fi
fi

# Check if we have TypeScript/JavaScript files in the commit
js_files=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(js|jsx|ts|tsx)$' || true)

# Run Node.js checks if there are JS/TS files
if [ -n "$js_files" ]; then
  echo "ğŸŒ Running Next.js code quality checks..."
  
  # Run tests and store the exit code
  echo "ğŸ§ª Running tests..."
  npm test
  if [ $? -ne 0 ]; then
    echo "âŒ Tests failed. Please fix the failing tests before committing."
    exit 1
  fi

  # Run linting and store the exit code
  echo "ğŸ” Running linting..."
  npm run lint
  if [ $? -ne 0 ]; then
    echo "âŒ Linting failed. Please fix the errors before committing."
    exit 1
  fi

  # Run formatting
  echo "ğŸ’… Running formatting..."
  npm run format
  
  # Check if any files were modified by formatting
  if [ -n "$(git diff)" ]; then
    echo "âŒ Formatting changed some files. Please stage the changes and try committing again."
    exit 1
  fi
  
  echo "âœ… Next.js checks passed!"
fi

echo "âœ… All pre-commit checks passed!"
